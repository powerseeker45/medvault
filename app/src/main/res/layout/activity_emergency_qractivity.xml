<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Emergency QR"
            app:titleTextColor="@android:color/white" />


        <EditText android:id="@+id/nameInput" android:hint="Name"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <EditText android:id="@+id/bloodInput" android:hint="Blood Group"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <EditText android:id="@+id/allergyInput" android:hint="Allergies"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <EditText android:id="@+id/contactInput" android:hint="Emergency Contact"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <Button android:id="@+id/generateBtn" android:text="Generate QR"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <ImageView android:id="@+id/qrImageView"
            android:layout_width="250dp" android:layout_height="250dp"
            android:layout_gravity="center" android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/infoText"
            android:text="This QR can be scanned by anyone to access your emergency details."
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp" />


        <Button android:id="@+id/scanBtn" android:text="Scan QR"
            android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
